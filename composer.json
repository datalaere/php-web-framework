{
    "name": "php-spl/framework",
    "description": "A series of libraries/components that form the basics of many website and most frameworks.",
    "authors": [
        {
            "name": "Thomas Elvin",
            "email": "info@datalaere.dk"
        }
    ],
    
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Spl\\": "src",
            "Tests\\": "tests"
        }
    },

    "require": {
        "php": ">=7.2.5",
        "psr/log": "^1.0",
        "psr/http-message": "^1.0",
        "psr/simple-cache": "^1.0",
        "psr/cache": "^1.0",
        "psr/container": "^1.0"
    },

    "provide": {
        "psr/log-implementation": "1.0",
        "psr/simple-cache-implementation": "1.0",
        "psr/cache-implementation": "1.0",
        "psr/container-implementation": "1.0"
    }
}
